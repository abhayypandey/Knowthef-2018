<div>
    @using (Html.BeginForm("Backdoor1213", "Cruds", FormMethod.Post))
    {
    <input type="submit" value="Delete"  onclick="return confirm('Are you Sure ?') "/>
    <noscript style="color:red">Enable Javascript on your Browser for optimum functionality...</noscript>
    <br /><br />
    <table class="table" id="Dats1" style="padding:1%;">
        <tr>
            <th>
                <input type="checkbox" id="CheckMe" />
            </th>
            <th>
            <th>
            </th>    
            <th>
                @Html.DisplayNameFor(model => model.HereEmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.word)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr style="overflow:hidden;">
                <td>
                    <input type="checkbox" class="Checkboxmy" name="Checkboxmydat" value="@item.Id"/>
                </td>
                <td>
                    @Html.ActionLink("View", "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HereEmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.word)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

            </tr>
        }
        
    </table>
    }

    <script type="text/javascript">
    function CountRows() {
        var totalRowCount = 0;
        var rowCount = 0;
        var table = document.getElementById("Dats1");
        var rows = table.getElementsByTagName("tr")
        for (var i = 0; i < rows.length; i++) {
            totalRowCount++;
            if (rows[i].getElementsByTagName("td").length > 0) {
                rowCount++;
            }
        }
        var message = "Row Count: " + rowCount;
        alert(message);
    }
    </script>
   
</div>